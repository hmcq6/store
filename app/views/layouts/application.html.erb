<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-4">
          <h1><%= link_to "My Store", root_path %></h1>
        </div>
        <div class="col-4 text-right">
          <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
        </div>
        <div class="col-4">
          <% if user_signed_in? %>
            <h3>Hello <%= current_user.email %><h3>
            <% # TODO: Implement logout %>
            <h3><% link_to 'Logout', destroy_user_session_path %></h3>
          <% else%>
            <h3><%= link_to 'Login', new_user_session_path %></h3>
            <h3><%= link_to 'Register', new_user_registration_path %></h3>
          <% end %>
        </div>
      </div>
      <hr>
      <%= yield %>
    </div>
  </body>
</html>
