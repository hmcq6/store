<h3 class="text-center">Add New Product</h3>

<%= form_for @product do |f| %>
  <div class="row">
    <div class="form-group col-sm">
      <%= f.label :name, class: 'col-sm-3' %>
      <%= f.text_field :name, class: 'form-input col-sm-9' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm">
      <%= f.label :price, class: 'col-sm-3' %>
      <%= f.text_field :price, class: 'col-sm-9' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm">
      <%= f.label :active, class: 'col-sm-3' %>
      <%= f.check_box :active, class: 'col-sm-9' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm">
      <%= f.label :description, class: 'col-sm-3' %>
      <%= f.text_area :description, class: 'col-sm-9' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm">
      <%= f.label :file, class: 'col-sm-3' %>
      <%= f.file_field :file, class: 'col-sm-9' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.submit 'Add Product', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
