<h3 class="text-center">Add New Product</h3>

<div class="row">
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-input' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>
  <% end %>
</div>
